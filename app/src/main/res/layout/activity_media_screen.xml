<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                tools:ignore="InvalidId" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginStart="36dp"
                android:text="@string/listen_to_music_and_relax"
                android:fontFamily="@font/montserrat"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="175dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/image_media"
            android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="550dp"
                android:layout_marginStart="40dp"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat"/>
            <SeekBar
                android:id="@+id/seekerBar"
                style="@style/CustomSeekBar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="595dp"
                android:layout_marginStart="35dp"
                android:progressDrawable="@drawable/custom_seeker_bar"
                android:thumbTint="#000000"
                />
            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="630dp"
                android:layout_marginStart="300dp"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startMusic"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="700dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/ic_baseline_play_circle_24"
            tools:ignore="MissingConstraints" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stopMusic"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="700dp"
            android:layout_marginStart="240dp"
            android:background="@drawable/ic_baseline_motion_photos_pause_24"
            tools:ignore="MissingConstraints" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>